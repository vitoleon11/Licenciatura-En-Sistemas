///INCISO A\\\
programa ejemplo
procesos
  proceso juntarFlor(ES contador:numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      contador := contador + 1
  fin
  
  proceso recorrerJuntando(ES flores:numero)
  comenzar
    repetir 9
      juntarFlor(flores)
      mover
    juntarFlor(flores)
  fin
  
  proceso informarDiferencia(E f1:numero;E f2:numero)
  comenzar
    si (f1 > f2)
      Informar(f1 - f2)
  fin
  
areas
  area1: AreaP (1,1,1,10)
  area2:AreaP(2,11,2,20)
  
robots
  robot tipo1
  variables 
    flores1,flores2,diferencia:numero
  comenzar
    recorrerJuntando(flores1)
    EnviarMensaje(flores1,robot2)
    RecibirMensaje(flores2,robot2)
    informarDiferencia(flores1,flores2)
  fin
  
  robot tipo2
  variables
    flores2,flores1,diferencia:numero
  comenzar
    recorrerJuntando(flores2)
    EnviarMensaje(flores2,robot1)
    RecibirMensaje(flores1,robot1)
    informarDiferencia(flores2,flores1)
  fin
  
variables
  robot1: tipo1
  robot2 : tipo2
comenzar
  AsignarArea(robot1, area1)
  AsignarArea(robot2,area2)
  Iniciar(robot1, 1,1)
  Iniciar(robot2,2,11)
fin




///INCISO B\\\


programa ejemplo
procesos
  proceso juntarFlor(ES contador:numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      contador := contador + 1
  fin
  
  proceso recorrerJuntando(ES flores:numero)
  comenzar
    repetir 9
      juntarFlor(flores)
      mover
    juntarFlor(flores)
  fin
  
  proceso informarDiferencia(E f1:numero;E f2:numero)
  comenzar
    si (f1 > f2)
      Informar(f1 - f2)
    si (f2 > f1)
      Informar(f2 - f1)
  fin
  
areas
  area1: AreaP (1,1,1,10)
  area2:AreaP(2,11,2,20)
  area3:AreaP(2,1,2,1)
robots
  robot tipo1
  variables 
    flores1,flores2,diferencia:numero
  comenzar
    recorrerJuntando(flores1)
    EnviarMensaje(flores1,fiscalizador)
  fin
  
  robot tipo2
  variables
    flores2,flores1,diferencia:numero
  comenzar
    recorrerJuntando(flores2)
    EnviarMensaje(flores2,fiscalizador)
  fin
  
  robot tipo3
  variables
    flores1,flores2,diferencia:numero
  comenzar  
    RecibirMensaje(flores1,robot1)
    RecibirMensaje(flores2,robot2)
    informarDiferencia(flores1,flores2)
  fin
variables
  robot1: tipo1
  robot2 : tipo2 
  fiscalizador : tipo3  
comenzar
  AsignarArea(robot1, area1)
  AsignarArea(robot2,area2)
  AsignarArea(fiscalizador,area3)
  Iniciar(robot1,1,1)
  Iniciar(robot2,2,11)
  Iniciar(fiscalizador,2,1)
fin
