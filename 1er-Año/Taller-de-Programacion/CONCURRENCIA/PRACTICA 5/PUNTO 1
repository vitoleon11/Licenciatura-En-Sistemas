programa punto1
procesos 
  proceso tomarFlores
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
  fin
  proceso tomarPapeles
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso callePapeles
  comenzar
    tomarPapeles
    BloquearEsquina(2,PosCa)
    mover
    tomarPapeles
    BloquearEsquina(3,PosCa)
    mover
    LiberarEsquina(2,PosCa)
    tomarPapeles
    mover
    LiberarEsquina(3,PosCa)
    mientras (PosAv < 100)
      tomarPapeles
      mover
  fin
  proceso avenidaFlores
  comenzar
    mientras (PosCa < 100)
      tomarFlores
    si ((PosCa +1 = 98) | (PosCa +1 = 99))
      BloquearEsquina(PosAv,PosCa +1)
    mover
    si ((PosCa - 1 = 98) | (PosCa -1 = 99))
      LiberarEsquina(PosAv, PosCa -1)
    tomarFlores
  fin
  
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot rojo
  comenzar
    avenidaFlores
  fin
  
  robot azul
  comenzar
    derecha
    callePapeles
  fin
  
  robot fiscalizador
  comenzar
    derecha
  fin
variables
  R1 : rojo
  R2 : rojo
  A1: azul
  A2: azul
  fisca: fiscalizador
comenzar
  AsignarArea(R1, ciudad)
  AsignarArea(R2, ciudad)
  AsignarArea(A1, ciudad)
  AsignarArea(A2, ciudad)
  AsignarArea(fisca,ciudad)
  
  Iniciar(R1,2,1)
  Iniciar(R2,3,1)
  Iniciar(A1,1,98)
  Iniciar(A2,1,99)
  Iniciar(fisca,100,100)
fin
