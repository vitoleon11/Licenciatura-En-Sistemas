programa gork
procesos
  proceso juntarFloresAv1 (ES f:numero;ES esquinaSinFlor:numero;E ave:numero)
  comenzar
    f := 0
    esquinaSinFlor := 0
    repetir 99
      mientras (HayFlorEnLaEsquina)
        tomarFlor
        f := f +1
      si (~HayFlorEnLaEsquina)
        esquinaSinFlor := esquinaSinFlor + 1
      mover
    si (~HayFlorEnLaEsquina)
      esquinaSinFlor := esquinaSinFlor + 1
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      f := f +1
    repetir f
      depositarFlor
  fin
  

areas
  ciudad: AreaC (1,1,100,100)
  
  
robots
  robot tipo1
  variables
    f:numero
    eSF:numero
  comenzar
    juntarFloresAv1(f,eSF,1)
    Informar(f)
    Informar(eSF)
  fin
  
  
  robot tipo2
  variables
    f:numero
    eSF:numero
  comenzar
    juntarFloresAv1(f,eSF,3)
    Informar(f)
    Informar(eSF)
  fin
  
  robot tipo3
  variables
    f:numero
    eSF:numero
  comenzar
    juntarFloresAv1(f,eSF,5)
    Informar(f)
    Informar(eSF)
  fin
  
variables
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
