programa gork
procesos
  proceso agarrarFlores
  comenzar
    mientras(HayFlorEnLaEsquina) 
      tomarFlor
  fin
  
  proceso agarrarPapeles
  comenzar
    mientras (HayPapelEnLaEsquina)
      tomarPapel
  fin
  
  proceso hacerAreaPar
  variables
    avenidas:numero
  comenzar
    avenidas := 1
    mientras (avenidas < 26)
      repetir 99
        agarrarPapeles
        mover
      agarrarPapeles
      si (avenidas <> 25)
        Pos(PosAv+1,1)
      avenidas := avenidas + 1
  fin

  proceso hacerAreaImpar
  variables
    avenidas:numero
  comenzar
    avenidas := 1
    mientras (avenidas < 26)
      repetir 99
        agarrarFlores
        mover
      agarrarFlores
      si (avenidas <> 25)
        Pos(PosAv+1,1)
      avenidas := avenidas + 1
  fin

areas
  area1: AreaP(1,1,25,100)
  area2: AreaP(26,1,50,100)
  area3: AreaP(51,1,75,100)
  area4: AreaP(76,1,100,100)

robots
  robot tipo1
  comenzar
    hacerAreaImpar
    Pos(51,1)
    hacerAreaImpar
  fin
  
  
  robot tipo2
  comenzar
    hacerAreaPar
    Pos(76,1)
    hacerAreaPar
  fin
  
  

variables
  robot1: tipo1
  robot2: tipo2
comenzar
  AsignarArea(robot1, area1)
  AsignarArea(robot1,area3)
  AsignarArea(robot2, area2)
  AsignarArea(robot2, area4)
  Iniciar(robot1,1,1)
  Iniciar(robot2,26,1)
fin
