programa gork
procesos
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin
  
  proceso cantidadEscalonesMayor(ES cantidad:numero)
  variables
    flores,papeles:numero
  comenzar
    flores:=0
    papeles:= 0
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papeles := papeles + 1
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
    cantidad := papeles - flores
    repetir papeles
      depositarPapel
    repetir flores
      depositarFlor
  fin
  
  proceso hacerEscalera(ES cantEscalones:numero)
  variables
    mayor:boolean
    escalera,cantidad:numero
  comenzar
    escalera := 1 
    cantEscalones := 0
    repetir 4
      repetir escalera
        cantidadEscalonesMayor(cantidad)
        si (cantidad = 1)
          cantEscalones := cantEscalones + 1
        mover
      derecha
      repetir escalera
        cantidadEscalonesMayor(cantidad)
        si (cantidad = 1)
          cantEscalones := cantEscalones + 1
        mover
      izquierda
      escalera := escalera + 1
  fin


areas
  ciudad: AreaC (1,1,100,100)
  
  
robots
  robot tipo1
  variables
    cant:numero
  comenzar
    hacerEscalera(cant)
    Informar(cant)
  fin
  
  
  robot tipo2
  variables
    cant:numero
  comenzar
    hacerEscalera(cant)
    Informar(cant)
  fin
  
  robot tipo3
  variables
    cant:numero
  comenzar
    hacerEscalera(cant)
    Informar(cant)
  fin
  

variables
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
comenzar
  AsignarArea(robot1, ciudad)
  AsignarArea(robot2, ciudad)
  AsignarArea(robot3, ciudad)
  Iniciar(robot1, 22,6)
  Iniciar(robot2, 17,10)
  Iniciar(robot3, 12,14)
fin
