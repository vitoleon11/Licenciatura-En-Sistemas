programa punto4
procesos

  proceso juntarFlor(ES noHayFlores:boolean;E av:numero;E ca:numero; ES cantFlores:numero)
  comenzar
    Pos(av,ca)
    si HayFlorEnLaEsquina
      tomarFlor
      cantFlores := cantFlores + 1
    sino 
      noHayFlores:= V
  fin
  
areas
  cuadrante: AreaC(2,2,10,10)
  areaJefe: AreaP(1,1,1,1)
  area1: AreaP(2,1,2,1)
  area2: AreaP(3,1,3,1)
  area3: AreaP(4,1,4,1)
  area4: AreaP(5,1,5,1)
  
robots
  robot tipo1
  variables
    noHayFlores:boolean
    av,ca,avActual,caActual,cantFlores:numero
  comenzar
    cantFlores := 0
    RecibirMensaje(av,robotJefe)
    RecibirMensaje(ca,robotJefe)
    avActual := PosAv
    caActual := PosCa
    mientras (noHayFlores = F)
      BloquearEsquina(av,ca)
      juntarFlor(noHayFlores,av,ca,cantFlores)
      Pos(avActual,caActual)
      LiberarEsquina(av,ca)
    EnviarMensaje(cantFlores,robotJefe)
  fin
  
  robot tipoJefe
  variables
    f1,f2,f3,f4,av,ca,max:numero
  comenzar
    max := -1
    Random(av,2,10)
    Random(ca,2,10)
    EnviarMensaje(av,robot1)
    EnviarMensaje(ca,robot1)
    EnviarMensaje(av,robot2)
    EnviarMensaje(ca,robot2)
    EnviarMensaje(av,robot3)
    EnviarMensaje(ca,robot3)
    EnviarMensaje(av,robot4)
    EnviarMensaje(ca,robot4)
    RecibirMensaje(f1,robot1)
    RecibirMensaje(f2,robot2)
    RecibirMensaje(f3,robot3)
    RecibirMensaje(f4,robot4)
    si (f1 > max)
      max := f1
    si (f2 > max)
      max := f2 
    si (f3 > max)
      max := f3
    si (f4 > max)
      max := f4
    si (f1 = max)
      Informar(1)
    si (f2 = max)
      Informar(2)
    si (f3 = max)
      Informar(3)
    si (f4 = max)
      Informar(4)
  fin
variables
  robot1 : tipo1
  robot2: tipo1
  robot3: tipo1
  robot4: tipo1
  robotJefe: tipoJefe
comenzar
  AsignarArea(robotJefe,areaJefe)
  AsignarArea(robot1,cuadrante)
  AsignarArea(robot2,cuadrante)
  AsignarArea(robot3,cuadrante)
  AsignarArea(robot4,cuadrante) 
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  AsignarArea(robot4,area4)
  
  Iniciar(robot1,2,1)
  Iniciar(robot2,3,1)
  Iniciar(robot3,4,1)
  Iniciar(robot4,5,1)
  Iniciar(robotJefe,1,1)
fin
